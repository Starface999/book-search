<!DOCTYPE html>
<html>
<head>
  <!-- include head partial from ./views/_head.ejs -->
  <% include ./_head %>
</head>

<body>
  <header>    
    <!-- sign up and log in buttons -->
    <div class="btn-group sign-up-log-in" role="group">
      <button type="button" id="sign-up-btn" class="btn btn-default" data-toggle="modal" data-target="#sign-up-modal">Sign up</button>
      <button type="button" id="log-in-btn" class="btn btn-default" data-toggle="modal" data-target="#log-in-modal">Log in</button>
    </div>
    <!-- include sign up and log in modals from ./views/_signUpLogInModal.ejs -->
    <% include ./_signUpLogInModal %>
    <br>
    <br>

    <h1 >NEXT BOOK</h1>
    
    <!-- intro text -->
    <div id="intro-text-div">
      <h4 id="intro-text">
        SIGN UP OR LOG IN TO SEARCH FOR YOUR NEXT BOOK AND TO VIEW RECOMMENDATIONS
      </h4>
    </div>
  </header>
  <hr id="indexHr">

  <div class="container">
    <div class="row">
      
      <!-- start of LHC -->
      <div class="col-sm-6 col-offset-2"> 
        <div class="landing-page-list">
          <h5 class="landingPageHeaders">New York Times Hardcover Fiction <br> Best-seller List</h5>
          <ul class="list-group">
            <% for (var i = 0; i < lowerCaseHardcoverFictionList.length; i++) { %>
              <li class="list-group-item">
                <span class="boldFont"><strong><%= i + 1 %>. <%= lowerCaseHardcoverFictionList[i].book_details[0].title.toUpperCase() %> </strong></span> by <%= lowerCaseHardcoverFictionList[i].book_details[0].author %>
                <br>
                <%= lowerCaseHardcoverFictionList[i].book_details[0].description %>
              </li>
            <% } %>
          </ul>
        </div>
      </div> 
      <!-- end of LHC -->
      
      <!-- start of RHC -->
      <div class="col-sm-6"> 
        <div class="landing-page-list">
          <h5 class="landingPageHeaders">New York Times Paperback Mass-Market Fiction <br>Best-seller List</h5>
          <ul class="list-group">
            <% for (var i = 0; i < lowerCasePaperbackFictionList.length; i++) { %>
              <li class="list-group-item">
                <span class="boldFont"><strong><%= i + 1 %>. <%= lowerCasePaperbackFictionList[i].book_details[0].title.toUpperCase() %> </strong></span> by <%= lowerCasePaperbackFictionList[i].book_details[0].author %>
                <br>
                <%= lowerCasePaperbackFictionList[i].book_details[0].description %>
              </li>
            <% } %>
          </ul>
        </div>
      </div> 
      <!-- end of RHC -->

    </div> <!-- end of row div -->
  </div> <!-- end of container div -->

  <!-- include footer from ./views/_footer.ejs -->
  <% include ./_footer %>
</body>
</html>


