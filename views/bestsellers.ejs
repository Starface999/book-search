<!DOCTYPE html>
<html>
<head>
  <!-- include head partial from ./views/_head.ejs -->
  <% include ./_head %>
</head>

<body>
	<header>
		<!-- include nav bar partial from ./views/_navBar.ejs -->
		<% include ./_navBar %>
	</header>
		
		<!-- heading and intro text -->
		<div class="container">
			<div class="row">
			  <div class="col-8 col-offset-2 introDiv">
				  <h3 id="homepageIntroText">BEST-SELLER LISTS</h3>
				  <hr id="introHr">
				  <h4>USE THIS PAGE TO VIEW THE LATEST BEST-SELLERS</h4>
			  </div> <!-- end of col -->
	  	</div> <!-- end of row div -->
	  </div> <!-- end of container div -->

	  <div class="container bestsellersLists">
	    <div class="row">

	      <!-- start of LHC -->
	      <div class="col-sm-6 col-offset-2 bestsellerList"> 
          <h5 class="landingPageHeaders">New York Times Hardcover Fiction <br> Best-seller List</h5>
          <ul class="list-group">
            <% for (var i = 0; i < lowerCaseHardcoverFictionList.length; i++) { %>
            	<!-- each book has a list item with data attributes =to the books attributes -->
              <li class="list-group-item" 
              		data-title="<%= lowerCaseHardcoverFictionList[i].book_details[0].title %>"
              		data-author="<%= lowerCaseHardcoverFictionList[i].book_details[0].author %>"
              		data-synopsis="<%= lowerCaseHardcoverFictionList[i].book_details[0].description %>"
              		data-review="<%= lowerCaseHardcoverFictionList[i].reviews[0] %>"
              		data-image=""
              		data-isbn="<%= lowerCaseHardcoverFictionList[i].isbns[0].isbn10 %>"
              >
                <!-- book titles and authors -->
                <span class="boldFont"><strong><%= i + 1 %>. <%= lowerCaseHardcoverFictionList[i].book_details[0].title.toUpperCase() %> </strong></span> by <%= lowerCaseHardcoverFictionList[i].book_details[0].author %>
                <br>
                <!-- book synopsis -->
                <%= lowerCaseHardcoverFictionList[i].book_details[0].description %>
              	<!-- add to to-read list button and read and enjoyed button -->
                <br>
                <button type="button" class="btn btn-default addToListBtn" data-container="body" data-toggle="popover" data-placement="bottom" data-content="This book has been added to your To-read list!">Add to list</button>
                <button type="button" class="btn btn-default readEnjoyedBtn" data-container="body" data-toggle="popover" data-placement="bottom" data-content="Thank you for letting us know you enjoyed this.">Read and enjoyed</button>
              </li>
            <% } %>
          </ul>
	      </div> 
	      <!-- end of LHC -->
	      
	      <!-- start of RHC -->
	      <div class="col-sm-6 bestsellerList"> 
          <h5 class="landingPageHeaders">New York Times Paperback Mass-Market Fiction <br> Best-seller List</h5>
          <ul class="list-group">
            <% for (var i = 0; i < lowerCasePaperbackFictionList.length; i++) { %>
              <!-- each book has a list item with data attributes =to the books attributes -->
              <li class="list-group-item"
								data-title="<%= lowerCasePaperbackFictionList[i].book_details[0].title %>"
								data-author="<%= lowerCasePaperbackFictionList[i].book_details[0].author %>"
								data-synopsis="<%= lowerCasePaperbackFictionList[i].book_details[0].description %>"
								data-review="<%= lowerCasePaperbackFictionList[i].reviews[0] %>"
								data-image=""
								data-ISBN="<%= lowerCasePaperbackFictionList[i].isbns[0].isbn10 %>"
              >
                <!-- book titles and authors -->
                <span class="boldFont"><strong><%= i + 1 %>. <%= lowerCasePaperbackFictionList[i].book_details[0].title.toUpperCase() %> </strong></span> by <%= lowerCasePaperbackFictionList[i].book_details[0].author %>
                <br>
                <!-- book synopsis -->
                <%= lowerCasePaperbackFictionList[i].book_details[0].description %>
                <!-- add to to-read list button -->
                <br>
                <button type="button" class="btn btn-default addToListBtn" data-container="body" data-toggle="popover" data-placement="bottom" data-content="This book has been added to your To-read list!">Add to list</button>
                <button type="button" class="btn btn-default readEnjoyedBtn" data-container="body" data-toggle="popover" data-placement="bottom" data-content="Thank you for letting us know you enjoyed this.">Read and enjoyed</button>
              </li>
            <% } %>
          </ul>
	      </div> 
	      <!-- end of RHC -->

	    </div> <!-- end of row div -->
	  </div> <!-- end of container div -->
	  
    <!-- include footer from ./views/_footer.ejs -->
    <% include ./_footer %>
</body>
</html>