<!DOCTYPE html>
<html>
<head>
  <!-- include head partial from ./views/_head.ejs -->
  <% include ./_head %>
</head>

<body>
	<header>
		<!-- include nav bar partial from ./views/_navBar.ejs -->
		<% include ./_navBar %>
	</header>

	<!-- heading and intro text -->
	<div class="container">
		<div class="row">
		  <div class="col-8 col-offset-2 introDiv">
			  <h3 id="homepageIntroText">CONTACT US</h3>
		  </div> <!-- end of col -->
  	</div> <!-- end of row div -->
  </div> <!-- end of container div -->

	<div class="container">
		<div class="row">
		  <div class="col-sm-6 col-sm-offset-3">
			  <form id="contactUsForm">
			  	<div class="form-group">
				  	<input type="text" id="contactUsName" name="contactUsName" class="form-control" value="<%= user.firstName %> <%= user.lastName %>" required>
				  </div>
				  <div class="form-group">
				  	<input type="email" id="contactUsEmail" name="contactUsEmail" class="form-control" value="<%= user.email %>" required>
				  </div>
				  <div class="form-group">
				  	<textarea id="contactUsMessage" name="contactUsMessage" class="form-control" placeholder="Enter your message here..." required autofocus></textarea>
				  </div>
				  <div>
				  	<button type="submit" id="contactUsBtn" class="btn btn-default">Submit</button>
			  	</div>
			  </form>
			  <br>
			  <div id="contactAlertDiv"><div>
		  </div> <!-- end of col -->
  	</div> <!-- end of row div -->
  </div> <!-- end of container div -->


